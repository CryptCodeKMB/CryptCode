#include <bits/stdc++.h>
#define f first
#define s second
typedef int64_t tt;
typedef unsigned long long ll;
using namespace std;

int main()
{
    ios_base::sync_with_stdio(0);cin.tie(0);

    int T;
    cin >> T;

    for(int i = 0; i < T; i++){
        int y,x;
        cin >> y >> x;
    if(max(x,y)%2==0){
        if(y == max(y,x)) cout << (ll)y*y - (ll)(x-1);
         else cout << (ll)(x-1)*(x-1) + (ll)y;
    } else {
        if(y == max(y,x)) cout << (ll)(y-1)*(y-1) + (ll)x;
         else cout << (ll)x*x - (ll)(y-1);
           }
            cout << "\n";
    }
    return 0;
}
